<div class="l-width--800 h-mb-50">
	<button class="o-button--outline m-grid-fifth l-grid-quarter" rv-on-click="talController.toggleCategoriesVisible">
		<span class="h-hide-tiny">Categories<i class="icon-arrow-down h-ml-100 h-hide-mobile"></i></span><span class="h-hide-desktop"><i class="icon-more_horiz"></i></span>
	</button>
	<input type="text" class="o-input--text_inline m-grid-three-fifths l-grid-half" placeholder="find by lot # or keyword" rv-on-click="talController.toggleSearchVisible" rv-value="talObject.filteredResults.input">
	<button class="o-button h-hide-mobile">Search</button>

	<button class="o-text-button h-hide-desktop m-grid-fifth l-grid-quarter">Sort</button>
</div>
<div class="c-subhead" rv-if="talObject.activeTab | compare 'auction'">
	<div class="l-width--1200">
		<div class="h-d-inline-block">
			<span rv-unless="talObject.activeCategory">Showing All {talObject.auction.totalLots} Lots</span>
			<div rv-if="talObject.activeCategory">
				<label class="t-smalllabel h-hide-mobile">Category: </label>
				<div class="o-category-tag">
					{talObject.activeCategory} <i class="icon-error h-ml-50" rv-on-click="talController.clearCategory"></i>
				</div>
			</div>
		</div>
		<div class="h-float-right h-hide-mobile">
			<label class="t-smalllabel">Sort:</label>
			<span>Closing Time - Soonest first</span>
		</div>
	</div>
</div>


<div class="c-category-list" rv-if="talObject.categoriesVisible" rv-on-focusOut="talController.toggleCategoriesVisible">
	<!-- @include '/assets/partials/category-list' -->
</div>